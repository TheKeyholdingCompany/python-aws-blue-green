#!/usr/bin/env python
import os
import boto3
from src.gateways.ec2_gateway import EC2Gateway
from src.gateways.elb_gateway import ELBGateway
from src.start_elb_instances import StartELBInstances

if __name__ == "__main__":
    elb_client = boto3.client('elb',
                            aws_access_key_id=os.getenv('AWS_ACCESS_KEY_ID'),
                            aws_secret_access_key=os.getenv('AWS_SECRET_ACCESS_KEY'),
                            region_name=os.getenv('AWS_REGION')
                            )
    ec2_resource = boto3.resource('ec2',
                                aws_access_key_id=os.getenv('AWS_ACCESS_KEY_ID'),
                                aws_secret_access_key=os.getenv('AWS_SECRET_ACCESS_KEY'),
                                region_name=os.getenv('AWS_REGION')
                                )
    elb_gateway = ELBGateway(elb_client)
    ec2_gateway = EC2Gateway(ec2_resource)
    use_case = StartELBInstances(elb_gateway=elb_gateway, ec2_gateway=ec2_gateway)
    use_case.call(os.getenv('ELB_NAME'))
